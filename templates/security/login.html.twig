{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <section class="container mt-5 pt-5 ">
        <article class="col-md-4 ">
            <form method="post">
                <div class="form-group">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    <h1 class="h3 m-3 font-weight-normal">Connectez vous</h1>
                    <label for="inputEmail" class="sr-only">Saisissez votre email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control m-3"
                           placeholder="Email" required autofocus>
                    <label for="inputPassword" class="sr-only">Entrez votre mot de passe</label>
                    <input type="password" name="password" id="inputPassword" class="form-control m-3 mb-0"
                           placeholder="Password"
                           required>

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >

                    {#
                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                        See https://symfony.com/doc/current/security/remember_me.html

                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div>
                    #}

                    <button class="btn btn-lg btn-primary m-3" type="submit">
                        Vous connecter
                    </button>
                    <a href="{{ path('user_registration') }}" class="p-2 text-dark">Cr√©er un compte</a>
                </div>
            </form>
        </article>
    </section>

{% endblock %}
