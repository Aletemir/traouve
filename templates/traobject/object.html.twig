{% extends 'base.html.twig' %}
{% block title %}
    Regarder cet objet
{% endblock %}

{% block header %}
    {{ parent() }}
{% endblock %}

{% block body %}


<div class="container">
        <div class="card object-card">
            <h1 class="card-header">
                <span class="badge badge-primary badge-found">
                    <i class="fa fa-map-pin"></i>
                    {{ traobject.state }}
                </span>
                {{ traobject.label }}
            </h1>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <img src="{{ asset('uploads/' ~ traobject.pictureFile) }}" class="img-thumbnail" alt="{{ traobject.category }}">
                    </div>
                    <div class="col-md-8">
                        {{ traobject.descritption  }}
                    </div>
                </div>
            </div>
            <footer class="card-footer">
                <ul class="object-features">
                    <li><a href="{{ path('category_show', {'id': traobject.category.id}) }}" class="badge" style="background-color: #dc143c;"><i class="fa fa-money"></i> {{ traobject.category }}</a></li>
                    <li><a href="#" class="badge badge-info"><i class="fa fa-calendar"></i> {{ traobject.eventAt|date('d m y') }}</a></li>
                    <li><a href="{{ path('departement_show', {'id': traobject.departement.id}) }}" class="badge badge-info"><i class="fa fa-calendar"></i> {{ traobject.departement }}</a></li>
                    <li><a href="#" class="badge badge-info"><i class="fa fa-map-marker"></i> {{ traobject.ville }}</a></li>
                </ul>
            </footer>
        </div>

        <hr>

        <h3>Commentaires</h3>
    {% if app.user %}
        <div class="alert alert-secondary" role="alert">
            <textarea class="form-control" name="" id="" cols="30" rows="3" placeholder="Veuillez saisir votre commentaire ici"></textarea>
            <button class="btn btn-primary">Envoyer</button>
        </div>
    {% else %}
        <div class="alert alert-secondary" role="alert">
            <p>Veuillez vous connecter afin de pouvoir laisser un commentaire</p>
            <a href="{{ path('app_login') }}" class="btn btn-primary">
                <i class="fa fa-sign-in"></i>
                Me connecter
            </a>
        </div>
    {% endif %}
</div>

{% endblock %}
{% block footer %}
    {{ parent() }}
{% endblock %}
